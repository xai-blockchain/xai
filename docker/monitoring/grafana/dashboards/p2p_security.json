{
  "annotations": { "list": [ { "builtIn": 1, "datasource": "-- Grafana --", "enable": true, "hide": true, "iconColor": "rgba(0, 211, 255, 1)", "name": "Annotations & Alerts", "type": "dashboard" } ] },
  "editable": true,
  "graphTooltip": 0,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Peers Connected",
      "id": 1,
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": [ "lastNotNull" ], "fields": "", "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [ { "expr": "xai_peers_connected", "refId": "A", "legendFormat": "peers" } ]
    },
    {
      "type": "timeseries",
      "title": "Network Bandwidth (bytes/s)",
      "id": 2,
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 6, "y": 0 },
      "fieldConfig": { "defaults": { "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20, "showPoints": "never" } }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "single" } },
      "targets": [
        { "expr": "rate(xai_network_bandwidth_sent_bytes_total[5m])", "refId": "A", "legendFormat": "sent" },
        { "expr": "rate(xai_network_bandwidth_received_bytes_total[5m])", "refId": "B", "legendFormat": "received" }
      ]
    },
    {
      "type": "timeseries",
      "title": "P2P Latency (p50/p95)",
      "id": 3,
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "drawStyle": "line", "lineWidth": 2, "showPoints": "never" } }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "single" } },
      "targets": [
        { "expr": "histogram_quantile(0.5, sum(rate(xai_network_latency_seconds_bucket[5m])) by (le))", "refId": "A", "legendFormat": "p50" },
        { "expr": "histogram_quantile(0.95, sum(rate(xai_network_latency_seconds_bucket[5m])) by (le))", "refId": "B", "legendFormat": "p95" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Security Events: Reorgs & Orphans",
      "id": 4,
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": { "defaults": { "custom": { "drawStyle": "bars", "lineWidth": 1, "showPoints": "never" } }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "single" } },
      "targets": [
        { "expr": "increase(xai_chain_reorgs_total[1h])", "refId": "A", "legendFormat": "reorgs (1h)" },
        { "expr": "increase(xai_orphaned_blocks_total[1h])", "refId": "B", "legendFormat": "orphans (1h)" }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 27,
  "style": "dark",
  "tags": [ "xai", "p2p", "security" ],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "title": "XAI P2P Security",
  "timezone": "",
  "version": 1
}
