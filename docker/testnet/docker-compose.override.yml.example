  #     - explorer

  # ============================================================================
  # Development Overrides
  # ============================================================================
  # Enable debug logging on bootstrap node
  # xai-testnet-bootstrap:
  #   environment:
  #     LOG_LEVEL: DEBUG
  #     XAI_P2P_DEBUG_SIGNING: "1"

  # ============================================================================
  # Port Overrides (if port conflicts exist)
  # ============================================================================
  # testnet-explorer:
  #   ports:
  #     - "8080:12080"  # Use different host port if 12080 is in use

  # ============================================================================
  # Resource Limits (for low-memory systems)
