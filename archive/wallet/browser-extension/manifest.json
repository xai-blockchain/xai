{
  "manifest_version": 3,
  "name": "XAI Blockchain Wallet",
  "description": "Manage XAI tokens, trade on DEX, and access DeFi features from your browser",
  "version": "1.0.0",
  "action": {
    "default_title": "XAI Wallet",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:1317/*",
    "http://127.0.0.1:1317/*",
    "http://localhost:26657/*",
    "http://127.0.0.1:26657/*"
  ],
  "permissions": ["storage", "alarms"]
}
