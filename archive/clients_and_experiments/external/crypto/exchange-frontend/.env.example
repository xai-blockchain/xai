# AIXN Exchange Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000

# Security Configuration
VITE_ENABLE_CSP=true
VITE_CSRF_ENABLED=true

# Feature Flags
VITE_ENABLE_TRADING=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_AUTO_REFRESH=true
VITE_AUTO_REFRESH_INTERVAL=10000

# Rate Limiting (Client-side)
VITE_MAX_API_CALLS_PER_MINUTE=60
VITE_MAX_WEBSOCKET_RECONNECT_ATTEMPTS=5

# Session Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_TOKEN_REFRESH_INTERVAL=300000

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# Production Settings
VITE_PROD_API_URL=https://api.aixn.exchange
VITE_PROD_WS_URL=wss://ws.aixn.exchange

# CDN Configuration (Optional)
VITE_CDN_URL=

# Analytics (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
