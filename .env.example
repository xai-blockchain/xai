# ===========================================
# XAI Blockchain Node Configuration
# ===========================================
# Copy this file to .env and configure your node
# WARNING: Never commit .env with real credentials to git!
#
# Generate secure secrets:
#   python -c "import secrets; print(secrets.token_hex(32))"
#
# For detailed documentation, see:
#   docs/security/environment_variables.md
# ===========================================

# ===========================================
# NETWORK SETTINGS
# ===========================================

# Network type: testnet or mainnet
# - testnet: For testing and development, easier difficulty, separate ports
# - mainnet: Production blockchain with full security requirements
XAI_NETWORK=testnet

# Network type (alternative variable name)
# Options: testnet, mainnet
XAI_NETWORK_TYPE=testnet

# Node identity/name (optional, for logging and monitoring)
XAI_NODE_NAME=my-xai-node

# Environment (for Docker deployments)
# Options: development, staging, production
XAI_ENV=production

# ===========================================
# PORT CONFIGURATION
# ===========================================

# API/RPC port for HTTP/WebSocket API access
# Default: 12001 (testnet), 8545 (mainnet)
XAI_API_PORT=12001

# Alternative variable names (legacy compatibility)
XAI_RPC_PORT=12001
XAI_NODE_PORT=12001

# P2P port for peer-to-peer connections
# Default: 12000 (testnet), 8765 (mainnet)
XAI_P2P_PORT=12000

# Prometheus metrics port for monitoring
# Default: 12090 (testnet), 8000 (mainnet)
XAI_METRICS_PORT=12090

# ===========================================
# DATA STORAGE & LOGGING
# ===========================================

# Base data directory for blockchain storage
# All blockchain data, wallets, and state files stored here
XAI_DATA_DIR=~/.xai/data

# Log directory for node logs
# Default: ~/.xai/logs
XAI_LOG_DIR=~/.xai/logs

# Log level for application logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
XAI_LOG_LEVEL=INFO

# Configuration directory (for Docker deployments)
XAI_CONFIG_DIR=/config

# ===========================================
# NODE OPERATION MODE
# ===========================================

# Node mode determines resource usage and capabilities
# Options:
#   - full: Complete blockchain with recent blocks (recommended)
#   - pruned: Keep only recent N blocks (saves disk space)
#   - light: Headers only, minimal resources (not fully implemented)
#   - archival: Full history with all indices (for block explorers)
XAI_NODE_MODE=full

# Block retention for pruned mode
# 0 = keep all blocks (full/archival mode)
# >0 = keep last N blocks (pruned mode)
# Minimum: 100 blocks, Recommended: 1000-10000
XAI_PRUNE_BLOCKS=0

# Enable checkpoint sync for faster initial sync
# 1=enabled (recommended), 0=disabled (full sync from genesis)
XAI_CHECKPOINT_SYNC=1

# ===========================================
# MINING CONFIGURATION
# ===========================================

# Mining reward address (REQUIRED for mining)
# Your wallet address to receive mining rewards
MINER_ADDRESS=

# Enable/disable mining
# 1=enabled, 0=disabled
XAI_MINING_ENABLED=0
XAI_ENABLE_MINING=false

# Number of mining threads
# Default: 1 (use CPU core count for maximum performance)
XAI_MINING_THREADS=1

# Allow empty block mining during idle periods (testnet only)
# 1=enabled (mine empty blocks for testing), 0=disabled
# Default: 0
XAI_ALLOW_EMPTY_MINING=0

# Mining heartbeat interval (seconds)
# How often to attempt mining when idle
# Default: 10 seconds
XAI_MINING_HEARTBEAT_SECONDS=10

# Initial mining difficulty (advanced)
# Testnet default: 2, Mainnet default: 4
# XAI_INITIAL_DIFFICULTY=2

# Target block time in seconds
# Default: 120 seconds (2 minutes)
# XAI_BLOCK_TIME_TARGET=120

# ===========================================
# API CONFIGURATION
# ===========================================

# API authentication
# Require API key for all API requests
# 1=required (recommended for production), 0=optional
XAI_API_AUTH_REQUIRED=0

# General API keys (comma-separated)
# Basic read/write access to node APIs
XAI_API_KEYS=

# Single API key (alternative to XAI_API_KEYS)
XAI_API_KEY=

# Admin API token (full administrative access)
# Can modify node configuration, manage keys, etc.
XAI_API_ADMIN_TOKEN=

# Role-based API keys (comma-separated)
# Admin: Full access to all endpoints
# Operator: Can manage node but not security settings
# Auditor: Read-only access for monitoring/audit
XAI_API_ADMIN_KEYS=
XAI_API_OPERATOR_KEYS=
XAI_API_AUDITOR_KEYS=

# CORS allowed origins (comma-separated)
# * = allow all origins (development only)
# Example: http://localhost:3000,https://app.example.com
XAI_API_ALLOWED_ORIGINS=*

# API rate limiting
# Maximum requests per time window per client
# Default: 120 requests per 60 seconds
XAI_API_RATE_LIMIT=120
XAI_API_RATE_WINDOW_SECONDS=60

# Maximum JSON payload size in bytes
# Default: 1048576 (1 MB)
XAI_API_MAX_JSON_BYTES=1048576

# API versioning
# Supported API versions (comma-separated)
# Default: v1,v2
XAI_API_VERSIONS=v1,v2

# Default API version for unversioned requests
# Default: v2
XAI_API_DEFAULT_VERSION=v2

# Deprecated API versions with sunset dates
# Format: version=sunset_date
# Example: v1=Wed, 01 Jan 2025 00:00:00 GMT
XAI_API_VERSION_DEPRECATIONS=v1=Wed, 01 Jan 2025 00:00:00 GMT

# API documentation URL
XAI_API_VERSION_DOCS_URL=https://github.com/xai-blockchain/xai/blob/main/docs/api/versioning.md

# API key storage and management
# Path to API key storage file
XAI_API_KEY_STORE=./secure_keys/api_keys.json

# Default TTL for new API keys (days)
# Default: 90 days
XAI_API_KEY_DEFAULT_TTL_DAYS=90

# Maximum TTL for API keys (days)
# Default: 365 days
XAI_API_KEY_MAX_TTL_DAYS=365

# Allow permanent API keys (never expire)
# 1=allow, 0=disallow (recommended)
XAI_API_KEY_ALLOW_PERMANENT=0

# ===========================================
# SECURITY SETTINGS
# ===========================================

# CRITICAL: These secrets are REQUIRED for mainnet
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# JWT secret for session tokens
XAI_JWT_SECRET=

# Wallet trade peer secret
# Used for secure peer-to-peer wallet trading
# REQUIRED for mainnet
XAI_WALLET_TRADE_PEER_SECRET=

# Time capsule master key
# Encryption key for time-locked transactions
# REQUIRED for mainnet
XAI_TIME_CAPSULE_MASTER_KEY=

# Embedded wallet salt
# Salt for embedded wallet encryption
# REQUIRED for mainnet
XAI_EMBEDDED_SALT=

# Lucky block seed
# Seed for random lucky block selection
# REQUIRED for mainnet
XAI_LUCKY_BLOCK_SEED=

# Wallet password for encrypted storage
# Used to encrypt local wallet files
XAI_WALLET_PASSWORD=

# Embedded wallet directory
# Directory for embedded wallet storage
XAI_EMBEDDED_DIR=./embedded_wallets

# Wallet trade peers (comma-separated URLs)
# Trusted peer nodes for wallet trading
# Example: https://peer1.example.com:8545,https://peer2.example.com:8545
XAI_WALLET_TRADE_PEERS=

# Hardware wallet configuration
# BIP44 derivation path for hardware wallets
# Default: 44'/0'/0'/0/0
XAI_LEDGER_PATH=44'/0'/0'/0/0

# Hardware wallet testing (development only)
# Allow mock hardware wallet for testing
# 1=enabled (dev only), 0=disabled
XAI_ALLOW_MOCK_HARDWARE_WALLET=0
XAI_HARDWARE_WALLET_ENABLED=0
XAI_HARDWARE_WALLET_PROVIDER=ledger

# Emergency circuit breaker
# Address authorized to pause the system in emergencies
XAI_EMERGENCY_PAUSER=0xAdmin

# Number of failures before circuit breaker triggers
# Default: 3
XAI_EMERGENCY_CIRCUIT_THRESHOLD=3

# Circuit breaker timeout (seconds)
# How long the circuit breaker stays open
# Default: 300 seconds (5 minutes)
XAI_EMERGENCY_CIRCUIT_TIMEOUT_SECONDS=300

# Security webhook for real-time alerts
# HTTP endpoint to receive security alerts
XAI_SECURITY_WEBHOOK_URL=

# Security webhook authentication token
XAI_SECURITY_WEBHOOK_TOKEN=

# Security webhook timeout (seconds)
# Default: 5 seconds
XAI_SECURITY_WEBHOOK_TIMEOUT=5

# Security webhook queue (for offline delivery)
XAI_SECURITY_WEBHOOK_QUEUE=./data/security_webhook_queue.json

# Security webhook queue encryption key
XAI_SECURITY_WEBHOOK_QUEUE_KEY=

# ===========================================
# P2P NETWORK SETTINGS
# ===========================================

# Peer discovery
# DNS seeds for automatic peer discovery (comma-separated)
# Example: seed1.xai.network,seed2.xai.network
XAI_P2P_DNS_SEEDS=

# Bootstrap nodes (comma-separated host:port pairs)
# Hardcoded peers to connect to on startup
# Example: 192.168.1.10:8765,192.168.1.20:8765
XAI_P2P_BOOTSTRAP_NODES=

# Peer connection limits
# Maximum total peers to maintain
# Default: 50
XAI_MAX_PEERS=50

# Maximum connections from single IP address
# Prevents single host from monopolizing connections
# Default: 50
XAI_P2P_MAX_CONNECTIONS_PER_IP=50

# Peer diversity enforcement (Sybil attack prevention)
# Maximum peers per /N prefix (CIDR block)
# Default: 8 peers per /16 block
XAI_P2P_MAX_PEERS_PER_PREFIX=8

# Maximum peers per Autonomous System Number
# Prevents single ISP/datacenter dominance
# Default: 16
XAI_P2P_MAX_PEERS_PER_ASN=16

# Maximum peers per country
# Geographic diversity requirement
# Default: 48
XAI_P2P_MAX_PEERS_PER_COUNTRY=48

# Diversity requirements
# CIDR prefix length for diversity calculation
# Default: 16 (/16 = 65k addresses)
XAI_P2P_DIVERSITY_PREFIX_LENGTH=16

# Minimum unique CIDR prefixes required
# Default: 5
XAI_P2P_MIN_UNIQUE_PREFIXES=5

# Minimum unique ASNs required
# Default: 5
XAI_P2P_MIN_UNIQUE_ASNS=5

# Minimum unique countries required
# Default: 5
XAI_P2P_MIN_UNIQUE_COUNTRIES=5

# Maximum peers with unknown geolocation
# Default: 32
XAI_P2P_MAX_UNKNOWN_GEO=32

# GeoIP lookup configuration
# API endpoint for IP geolocation
# {ip} will be replaced with actual IP address
# Default: https://ipinfo.io/{ip}/json
XAI_P2P_GEOIP_ENDPOINT=https://ipinfo.io/{ip}/json

# GeoIP lookup timeout (seconds)
# Default: 2.5 seconds
XAI_P2P_GEOIP_TIMEOUT=2.5

# GeoIP cache TTL (seconds)
# How long to cache geolocation results
# Default: 3600 seconds (1 hour)
XAI_P2P_GEOIP_CACHE_TTL=3600

# Bandwidth limits
# Maximum incoming bandwidth (bytes per second)
# Default: 1048576 (1 MB/s)
XAI_P2P_MAX_BANDWIDTH_IN=1048576

# Maximum outgoing bandwidth (bytes per second)
# Default: 1048576 (1 MB/s)
XAI_P2P_MAX_BANDWIDTH_OUT=1048576

# Message rate limiting
# Maximum messages per second per peer
# Default: 100
XAI_P2P_MAX_MESSAGE_RATE=100

# Security log rate (messages per second)
# How often to log security events
# Default: 20
XAI_P2P_SECURITY_LOG_RATE=20

# Connection timeouts
# Ping interval (seconds)
# How often to send keepalive pings
# Default: 20 seconds
XAI_P2P_PING_INTERVAL_SECONDS=20

# Ping timeout (seconds)
# How long to wait for ping response
# Default: 20 seconds
XAI_P2P_PING_TIMEOUT_SECONDS=20

# Connection close timeout (seconds)
# Graceful shutdown timeout
# Default: 10 seconds
XAI_P2P_CLOSE_TIMEOUT_SECONDS=10

# Idle connection timeout (seconds)
# Disconnect inactive connections
# Default: 900 seconds (15 minutes)
XAI_P2P_IDLE_TIMEOUT_SECONDS=900

# Monitor interval (seconds)
# How often to check connection health
# Default: 30 seconds
XAI_P2P_MONITOR_INTERVAL_SECONDS=30

# Maximum reconnection backoff (seconds)
# Maximum delay between reconnection attempts
# Default: 300 seconds (5 minutes)
XAI_P2P_MAX_RECONNECT_BACKOFF_SECONDS=300

# Blockchain synchronization
# Sync interval (seconds)
# How often to check for new blocks
# Default: 30 seconds
XAI_P2P_SYNC_INTERVAL_SECONDS=30

# Partial sync (download only missing blocks)
# 1=enabled (recommended), 0=disabled
XAI_PARTIAL_SYNC_ENABLED=1
XAI_P2P_PARTIAL_SYNC_ENABLED=1

# Force partial sync even when not needed (development)
# 1=force, 0=auto-detect
XAI_FORCE_PARTIAL_SYNC=0

# Minimum block delta for partial sync
# Only use partial sync if gap is larger than this
# Default: 100 blocks
XAI_P2P_PARTIAL_SYNC_MIN_DELTA=100

# Parallel sync (multiple concurrent workers)
# 1=enabled (faster), 0=disabled
XAI_P2P_PARALLEL_SYNC_ENABLED=1

# Number of parallel sync workers
# Default: 4
XAI_P2P_PARALLEL_SYNC_WORKERS=4

# Blocks per chunk for parallel sync
# Default: 128
XAI_P2P_PARALLEL_SYNC_CHUNK_SIZE=128

# Retry attempts for failed chunks
# Default: 2
XAI_P2P_PARALLEL_SYNC_RETRY=2

# Maximum blocks per page (pagination)
# Default: 200
XAI_P2P_PARALLEL_SYNC_PAGE_LIMIT=200

# TLS/SSL configuration
# Require TLS for peer connections
# 1=required (recommended for mainnet), 0=optional
XAI_PEER_TLS_REQUIRED=0

# Path to CA certificate bundle
# For custom/self-signed certificates
XAI_PEER_CA_BUNDLE=
XAI_P2P_CA_BUNDLE=

# Client certificate authentication
# Require client certificates for peer connections
# 1=required, 0=optional
XAI_PEER_REQUIRE_CLIENT_CERT=0

# Trusted peer verification
# List of trusted peer public keys (comma-separated)
XAI_TRUSTED_PEER_PUBKEYS=

# List of trusted certificate fingerprints (comma-separated)
XAI_TRUSTED_PEER_CERT_FPS=

# File containing trusted public keys (one per line)
XAI_TRUSTED_PEER_PUBKEYS_FILE=

# File containing trusted certificate fingerprints (one per line)
XAI_TRUSTED_PEER_CERT_FPS_FILE=

# Peer authentication
# Shared API key for peer-to-peer authentication
XAI_PEER_API_KEY=

# Nonce time-to-live (seconds)
# How long authentication nonces are valid
# Default: 300 seconds (5 minutes)
XAI_PEER_NONCE_TTL_SECONDS=300

# QUIC protocol support (experimental)
# Enable QUIC transport for peer connections
# 1=enabled, 0=disabled (default)
XAI_P2P_ENABLE_QUIC=0

# QUIC dial timeout (seconds)
# Default: 1.0 second
XAI_P2P_QUIC_DIAL_TIMEOUT=1.0

# Proof-of-Work anti-spam protection
# Require PoW for peer connections
# 1=enabled (recommended), 0=disabled
XAI_P2P_POW_ENABLED=1

# PoW difficulty (bits)
# Higher = more difficult, more CPU intensive
# Default: 18 bits
XAI_P2P_POW_DIFFICULTY_BITS=18

# Maximum PoW iterations
# Prevent DoS via excessive computation
# Default: 250000
XAI_P2P_POW_MAX_ITERATIONS=250000

# PoW reuse window (seconds)
# How long a PoW solution can be reused
# Default: 600 seconds (10 minutes)
XAI_P2P_POW_REUSE_WINDOW_SECONDS=600

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Genesis file path (optional)
# Path to custom genesis file
# XAI_GENESIS_FILE=genesis_testnet.json

# Genesis hash validation (security)
# Known-good genesis block hashes
# Used to detect chain forks/attacks
XAI_TESTNET_GENESIS_HASH=59b30b2d8525512cbd5715b24546d73b540ddb575d3778fdbdff02ba245a9141
XAI_MAINNET_GENESIS_HASH=

# Block header versioning
# Current block header version
# Default: 1
XAI_BLOCK_HEADER_VERSION=1

# Allowed block header versions (comma-separated)
# For backward compatibility during upgrades
# Default: 1
XAI_BLOCK_HEADER_ALLOWED_VERSIONS=1

# ===========================================
# MEMPOOL CONFIGURATION
# ===========================================

# Maximum transactions in mempool
# Prevents memory exhaustion
# Default: 10000
XAI_MEMPOOL_MAX_SIZE=10000

# Maximum transactions per sender
# Prevents single user from filling mempool
# Default: 100
XAI_MEMPOOL_MAX_PER_SENDER=100

# Minimum fee rate (XAI per byte)
# Transactions below this are rejected
# Default: 0.0000001
XAI_MEMPOOL_MIN_FEE_RATE=0.0000001

# Invalid transaction handling
# Number of invalid transactions before banning sender
# Default: 3
XAI_MEMPOOL_INVALID_TX_THRESHOLD=3

# Ban duration for invalid transaction spam (seconds)
# Default: 900 seconds (15 minutes)
XAI_MEMPOOL_INVALID_BAN_SECONDS=900

# Invalid transaction tracking window (seconds)
# Default: 900 seconds (15 minutes)
XAI_MEMPOOL_INVALID_WINDOW_SECONDS=900

# Alert thresholds
# Alert when invalid transaction count increases by this delta
# Default: 50
XAI_MEMPOOL_ALERT_INVALID_DELTA=50

# Alert when ban count increases by this delta
# Default: 10
XAI_MEMPOOL_ALERT_BAN_DELTA=10

# Alert when this many active bans exist
# Default: 1
XAI_MEMPOOL_ALERT_ACTIVE_BANS=1

# ===========================================
# VIRTUAL MACHINE (EVM)
# ===========================================

# Enable smart contract execution
# 1=enabled, 0=disabled
# Default: 0 (disabled)
XAI_VM_ENABLED=0

# Maximum gas per contract execution
# Prevents infinite loops and DoS
# Default: 20000000 (20M gas)
XAI_MAX_CONTRACT_GAS=20000000

# ===========================================
# TRADING & EXCHANGE
# ===========================================

# Trade fee percentage (decimal)
# Testnet: 0.002 (0.2%), Mainnet: 0.001 (0.1%)
# XAI_TRADE_FEE_PERCENT=0.002

# Trade order expiry (seconds)
# How long unfilled orders remain valid
# Default: 3600 seconds (1 hour)
# XAI_TRADE_ORDER_EXPIRY=3600

# Trade fee destination address
# Address that receives trading fees
# XAI_TRADE_FEE_ADDRESS=TXAITRADEFEE

# ===========================================
# ATOMIC SWAPS
# ===========================================

# Atomic swap fee rate
# Fee for cross-chain atomic swaps
# Default: 0.0000005
XAI_ATOMIC_SWAP_FEE_RATE=0.0000005

# UTXO transaction size estimate (bytes)
# For BTC/LTC/DOGE swap fee calculation
# Default: 300 bytes
XAI_ATOMIC_SWAP_UTXO_TX_SIZE=300

# Ethereum gas limits for atomic swaps
# Maximum gas for ETH swap transactions
# Default: 200000
XAI_ATOMIC_SWAP_ETH_GAS_LIMIT=200000

# Maximum gas price (Gwei)
# Default: 60 Gwei
XAI_ATOMIC_SWAP_ETH_MAX_FEE_GWEI=60

# Priority fee (Gwei)
# Default: 2 Gwei
XAI_ATOMIC_SWAP_ETH_PRIORITY_FEE_GWEI=2

# ===========================================
# CRYPTO DEPOSIT MONITORING
# ===========================================

# Enable automatic deposit detection
# Monitor external blockchain addresses for deposits
# 1=enabled, 0=disabled
XAI_CRYPTO_DEPOSIT_MONITOR_ENABLED=0

# Polling interval (seconds)
# How often to check for new deposits
# Default: 30 seconds
XAI_CRYPTO_DEPOSIT_POLL_INTERVAL=30

# Polling jitter (seconds)
# Random delay to prevent thundering herd
# Default: 5 seconds
XAI_CRYPTO_DEPOSIT_POLL_JITTER=5

# Deposit sources configuration (JSON object)
# Map of currency -> RPC configuration
# Example: {"BTC":{"rpc":"http://user:pass@localhost:8332","confirmations":6}}
XAI_CRYPTO_DEPOSIT_SOURCES=

