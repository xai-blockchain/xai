# XAI Blockchain - Environment Configuration Example
# Copy this file to .env and customize for your environment

# ============================================================================
# Environment
# ============================================================================
XAI_ENV=development
# Options: development, staging, production, testnet

# ============================================================================
# Node Configuration
# ============================================================================
XAI_NODE_PORT=8333
XAI_API_PORT=8080
XAI_WS_PORT=8081
XAI_METRICS_PORT=9090

# Network
XAI_NETWORK_ID=1
XAI_MAX_PEERS=125
XAI_MIN_PEERS=8
XAI_BOOTSTRAP_NODES=

# Mining
XAI_ENABLE_MINING=false
XAI_MINING_THREADS=2
XAI_MINING_ADDRESS=

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=xai_blockchain
POSTGRES_USER=xai
POSTGRES_PASSWORD=change_this_secure_password

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Monitoring
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_admin_password

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Security
# ============================================================================
XAI_TLS_ENABLED=false
XAI_API_KEY=
XAI_JWT_SECRET=

# ============================================================================
# External Services
# ============================================================================
# Block Explorer
EXPLORER_PORT=8082

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================================
# AI Integration (Optional)
# ============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================================================
# Advanced Configuration
# ============================================================================
# Data directories (container paths)
XAI_DATA_DIR=/data
XAI_LOG_DIR=/logs
XAI_CONFIG_DIR=/config

# Performance tuning
XAI_WORKER_THREADS=4
XAI_MAX_CONNECTIONS=1000

# Blockchain parameters
XAI_BLOCK_TIME=10
XAI_DIFFICULTY_ADJUSTMENT=2016
XAI_MAX_BLOCK_SIZE=1048576

# ============================================================================
# Development Options
# ============================================================================
# Enable debug mode (development only)
XAI_DEBUG=false

# Enable hot reload (development only)
XAI_HOT_RELOAD=false
