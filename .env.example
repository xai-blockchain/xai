# AIXN Blockchain - Environment Configuration Example
# Copy this file to .env and customize for your environment

# ============================================================================
# Environment
# ============================================================================
AIXN_ENV=development
# Options: development, staging, production, testnet

# ============================================================================
# Node Configuration
# ============================================================================
AIXN_NODE_PORT=8333
AIXN_API_PORT=8080
AIXN_WS_PORT=8081
AIXN_METRICS_PORT=9090

# Network
AIXN_NETWORK_ID=1
AIXN_MAX_PEERS=125
AIXN_MIN_PEERS=8
AIXN_BOOTSTRAP_NODES=

# Mining
AIXN_ENABLE_MINING=false
AIXN_MINING_THREADS=2
AIXN_MINING_ADDRESS=

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aixn_blockchain
POSTGRES_USER=aixn
POSTGRES_PASSWORD=change_this_secure_password

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Monitoring
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_admin_password

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Security
# ============================================================================
AIXN_TLS_ENABLED=false
AIXN_API_KEY=
AIXN_JWT_SECRET=

# ============================================================================
# External Services
# ============================================================================
# Block Explorer
EXPLORER_PORT=8082

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================================
# AI Integration (Optional)
# ============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================================================
# Advanced Configuration
# ============================================================================
# Data directories (container paths)
AIXN_DATA_DIR=/data
AIXN_LOG_DIR=/logs
AIXN_CONFIG_DIR=/config

# Performance tuning
AIXN_WORKER_THREADS=4
AIXN_MAX_CONNECTIONS=1000

# Blockchain parameters
AIXN_BLOCK_TIME=10
AIXN_DIFFICULTY_ADJUSTMENT=2016
AIXN_MAX_BLOCK_SIZE=1048576

# ============================================================================
# Development Options
# ============================================================================
# Enable debug mode (development only)
AIXN_DEBUG=false

# Enable hot reload (development only)
AIXN_HOT_RELOAD=false
