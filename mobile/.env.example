# XAI Wallet Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, preview, staging, production
EXPO_PUBLIC_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# XAI Node API URL
EXPO_PUBLIC_API_URL=http://localhost:12001

# WebSocket URL (optional, derived from API URL if not set)
# EXPO_PUBLIC_WS_URL=ws://localhost:12001

# =============================================================================
# EAS BUILD
# =============================================================================
# EAS Project ID (from expo.dev dashboard)
EAS_PROJECT_ID=your-eas-project-id

# =============================================================================
# SENTRY (Error Tracking)
# =============================================================================
# Sentry DSN for error reporting (leave empty for development)
SENTRY_DSN=
SENTRY_ORG=xai-network
SENTRY_PROJECT=xai-wallet-mobile
SENTRY_AUTH_TOKEN=

# =============================================================================
# ANALYTICS
# =============================================================================
# Analytics tracking ID (leave empty to disable)
ANALYTICS_ID=

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# Firebase configuration (for Android)
# Place google-services.json in the mobile directory

# Apple Push Notification Service (iOS)
# Configure in EAS dashboard

# =============================================================================
# FEATURE FLAGS
# =============================================================================
EXPO_PUBLIC_ENABLE_FAUCET=true
EXPO_PUBLIC_ENABLE_TESTNET=true
EXPO_PUBLIC_ENABLE_BIOMETRICS=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable React Native debugger
EXPO_PUBLIC_DEBUG=true

# Enable mock data (for offline development)
EXPO_PUBLIC_MOCK_DATA=false

# Bypass SSL certificate verification (NEVER in production!)
EXPO_PUBLIC_ALLOW_INSECURE=false
