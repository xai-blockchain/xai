{
  "name": "xai-browser-wallet-extension",
  "version": "0.2.0",
  "description": "XAI Browser Wallet Extension - Secure cryptocurrency wallet with hardware wallet support",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern=security"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!build/**",
      "!__tests__/**"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "verbose": true
  }
}
