groups:
  - name: ai-bridge.rules
    rules:
      - alert: AITokensHigh
        expr: increase(xai_ai_tokens_consumed_total[1h]) > 100000
        for: 5m
        labels:
          severity: critical
        annotations:
          summary: "AI bridge tokens spike"
          description: "{{ $value }} tokens consumed in last hour â€” inspect /ai/bridge/status and /ai/bridge/tasks."
