{
  "name": "xai-desktop",
  "version": "0.1.0",
  "description": "Electron shell for the XAI mining dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "node --test test/*.test.js"
  },
  "build": {
    "appId": "ai.xai.desktop",
    "productName": "XAI Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "../xai/**",
      "main.js",
      "preload.js",
      "package.json",
      "README.md"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "keywords": [
    "xai",
    "blockchain",
    "desktop"
  ],
  "author": "XAI Team",
  "license": "MIT",
  "dependencies": {
    "@noble/secp256k1": "^2.1.0",
    "argon2": "^0.40.1",
    "http-proxy": "^1.18.1",
    "electron": "^39.1.2",
    "selfsigned": "^2.4.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron-builder": "^24.5.0"
  }
}
