{
  "name": "xai-desktop",
  "version": "0.1.0",
  "description": "Electron shell for the XAI mining dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "ai.xai.desktop",
    "productName": "XAI Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "../xai/**",
      "main.js",
      "preload.js",
      "package.json",
      "README.md"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "keywords": [
    "xai",
    "blockchain",
    "desktop"
  ],
  "author": "XAI Team",
  "license": "MIT",
  "dependencies": {
    "electron": "^39.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron-builder": "^24.5.0"
  }
}
