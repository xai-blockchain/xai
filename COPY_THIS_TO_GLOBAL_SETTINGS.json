{
  // =========================================================================
  // VS CODE GLOBAL MEMORY OPTIMIZATION SETTINGS
  // Copy everything below and paste into your global settings.json
  // =========================================================================

  // File Watching Exclusions - Reduces CPU/Memory by ~40%
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.pytest_cache/**": true,
    "**/__pycache__/**": true,
    "**/site/**": true,
    "**/archived_*/**": true,
    "**/.mypy_cache/**": true,
    "**/data/**": true,
    "**/data_testnet/**": true,
    "**/logs/**": true,
    "**/secure_keys/**": true,
    "**/*.log": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/.docker/**": true,
    "**/docker/data/**": true,
    "**/prometheus/data/**": true,
    "**/grafana/data/**": true
  },

  // Search Exclusions - Speeds up searches
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/site": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/archived_*": true,
    "**/data": true,
    "**/data_testnet": true,
    "**/logs": true,
    "**/secure_keys": true,
    "**/*.log": true,
    "**/venv": true,
    "**/.venv": true,
    "**/docker/data": true
  },

  // File Explorer Exclusions - Cleaner UI
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/*.pyc": true,
    "**/.DS_Store": true
  },

  // Python Language Server Optimization - BIGGEST MEMORY SAVER!
  "python.analysis.memory.keepLibraryAst": false,
  "python.analysis.indexing": false,
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 1
    }
  ],
  "python.analysis.diagnosticMode": "openFilesOnly",

  // Git Optimization - Reduces background processes
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.postCommitCommand": "none",
  "git.decorations.enabled": true,
  "git.enableSmartCommit": false,
  "git.fetchOnPull": false,

  // TypeScript/JavaScript - Even if not using JS heavily
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "javascript.suggest.enabled": false,

  // Editor Performance Optimization
  "editor.minimap.enabled": false,
  "editor.suggestOnTriggerCharacters": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": true,
  "editor.acceptSuggestionOnEnter": "on",

  // Terminal Optimization
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.persistentSessionReviveProcess": "never",

  // Disable Telemetry
  "telemetry.telemetryLevel": "off",

  // Auto-save (optional - remove these two lines if you prefer manual save)
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000
}
