{
  "dashboard": {
    "title": "XAI Blockchain - Overview",
    "tags": ["blockchain", "xai", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Blockchain Height",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "xai_block_height",
            "legendFormat": "Block Height"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Height"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Block Production Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "xai:block_production_rate:1m",
            "legendFormat": "Blocks/min"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Blocks per Minute"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Total Blocks Mined",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "xai_blocks_total"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "title": "Connected Peers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "xai_peers_connected"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 3, "color": "yellow"},
            {"value": 5, "color": "green"}
          ]
        }
      },
      {
        "id": 5,
        "title": "Mempool Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "xai_transaction_pool_size"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "green"},
            {"value": 1000, "color": "yellow"},
            {"value": 5000, "color": "red"}
          ]
        }
      },
      {
        "id": 6,
        "title": "Chain Sync Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "xai_chain_sync_status"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 1, "color": "green"}
          ]
        },
        "mappings": [
          {"type": "value", "value": "0", "text": "Syncing"},
          {"type": "value", "value": "1", "text": "Synced"}
        ]
      },
      {
        "id": 7,
        "title": "Transaction Throughput",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "xai:transaction_throughput:1m",
            "legendFormat": "TX/s"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Transactions per Second"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Network Bandwidth",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "xai:network_bandwidth_sent:rate1m",
            "legendFormat": "Sent"
          },
          {
            "expr": "xai:network_bandwidth_received:rate1m",
            "legendFormat": "Received"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes per Second"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "xai_system_cpu_usage_percent",
            "legendFormat": "CPU %"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "max": 100},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [90], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]}
            }
          ]
        }
      },
      {
        "id": 10,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 20},
        "targets": [
          {
            "expr": "xai_system_memory_percent",
            "legendFormat": "Memory %"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 20},
        "targets": [
          {
            "expr": "xai_system_disk_percent",
            "legendFormat": "Disk %"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Disk Usage", "max": 100},
          {"format": "short"}
        ]
      }
    ]
  }
}
