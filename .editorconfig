# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# See: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_size = 4
end_of_line = crlf

# Batch files
[*.{bat,cmd}]
indent_size = 4
end_of_line = crlf

# Makefile (must use tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile]
indent_size = 4

[docker-compose.yml]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72

# Package manager files
[package.json]
indent_size = 2

[requirements*.txt]
indent_size = 0
